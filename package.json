{
  "name": "solo",
  "private": false,
  "version": "1.1.0",
  "type": "module",
  "main": "electron/main.js",
  "author": "Alexander Saltykov <masteralex@inbox.ru>",
  "description": "Minimalistic private note-taking app with focus on typography",
  "scripts": {
    "dev": "vite",
    "dev:plugin": "vite",
    "dev:standalone": "vite",
    "build": "vite build",
    "build:plugin": "VITE_BUILDMODE=plugin vite build",
    "build:standalone": "VITE_BUILDMODE=standalone vite build",
    "build:mobile": "VITE_BUILDMODE=plugin vite build && node scripts/copy-to-mobile.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev:plugin\" \"electron .\"",
    "electron:build": "vite build",
    "electron:package:win": "yarn build:plugin && electron-builder --win --config electron-builder.config.cjs",
    "electron:package:mac": "yarn build:plugin && electron-builder --mac --config electron-builder.config.cjs",
    "electron:package:all": "yarn build:plugin && electron-builder -mw --config electron-builder.config.cjs"
  },
  "dependencies": {
    "@tiptap/extension-heading": "^2.2.4",
    "@tiptap/extension-image": "^2.2.4",
    "@tiptap/extension-link": "^2.2.4",
    "@tiptap/extension-placeholder": "^2.2.4",
    "@tiptap/extension-task-item": "^2.2.4",
    "@tiptap/extension-task-list": "^2.2.4",
    "@tiptap/pm": "^2.2.4",
    "@tiptap/react": "^2.2.4",
    "@tiptap/starter-kit": "^2.2.4",
    "electron-store": "^10.0.1",
    "lucide-react": "^0.344.0",
    "mobx": "^6.12.0",
    "mobx-react-lite": "^4.0.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite3": "^5.1.7",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@babel/runtime": "^7.24.1",
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/turndown": "^5.0.4",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "fs-extra": "^11.2.0",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^0.19.8",
    "workbox-window": "^7.3.0"
  }
}